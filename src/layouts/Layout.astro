---
import Header from '../components/Header.vue'
import Footer from '../components/Footer.astro'
import {getLangFromUrl} from '../i18n/utils'
const { title } = Astro.props
const isDev = import.meta.env.DEV
const lang = getLangFromUrl(Astro.url)
---

<html lang={lang} class='font-body scroll-smooth'>
	<head>
		<meta charset='utf-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1' />		
		<link rel='icon' type='image/svg+xml' href='/favicon.png' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link href='https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap' rel='stylesheet' />
		<!-- Yandex.Metrika counter -->
		{
			!isDev
				? (
<script is:inline type="text/javascript" >
   (function(m,e,t,r,i,k,a){m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
   m[i].l=1*new Date();
   for (var j = 0; j < document.scripts.length; j++) {if (document.scripts[j].src === r) { return; }}
   k=e.createElement(t),a=e.getElementsByTagName(t)[0],k.async=1,k.src=r,a.parentNode.insertBefore(k,a)})
   (window, document, "script", "https://mc.yandex.ru/metrika/tag.js", "ym");

   ym(97470894, "init", {
        clickmap:true,
        trackLinks:true,
        accurateTrackBounce:true
   });
</script>
<noscript>
	<div><img src="https://mc.yandex.ru/watch/97470894" style="position:absolute; left:-9999px;" alt="" /></div></noscript>)
				: ''
		}
		<!-- /Yandex.Metrika counter -->
		<title>{title}</title>
		
	</head>
	<body>
		<Header client:load currentLocale={Astro.currentLocale} />
		<main class='max-w-screen-lg mx-auto mb-16'>
			<slot />
		</main>
		<Footer/>
	</body></html
>
