---
type Props = {
  chips: string[]
}
const { chips } = Astro.props
---

<div class='flex flex-row flex-wrap gap-2'>
  {
    chips.map(chip => (
      <div class='flex justify-center p-2 leading-none border-2 border-stroke rounded-full text-lg lg:text-xl'>
        {chip}
      </div>
    ))
  }
</div>
