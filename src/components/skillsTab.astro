---
import { getCollection } from 'astro:content'
import { translation } from '../i18n/translations'
const lang = (Astro.currentLocale as 'en' | 'ru') || 'en'
const skills = await getCollection('skills')
---

<section class=''>
  <h2 class='lg:mb-4 mb-2 text-2xl'>{translation[lang].tab_skills}</h2>
  <div class='flex flex-col gap-8'>
    <div>
      <ul class='flex flex-row gap-3 flex-wrap'>
        {
          skills.map(skillsArr =>
            skillsArr.data.data.map(skill => (
              <li class='text-center text-sm px-3 py-2 bg-blue-50 rounded text-gray-900'>{skill}</li>
            ))
          )
        }
      </ul>
    </div>
  </div>
</section>
