---
import ResumeTabs from './resumeTabs.vue'
import WorkExpTab from './workExpTab.astro'
import EducationTab from './educationTab.astro'
import SkillsTab from './skillsTab.astro'
import AboutTab from './aboutTab.astro'
import { translation } from '../i18n/translations'

const currentLang = Astro.currentLocale as keyof typeof translation
---

<ResumeTabs client:load currentLocale={currentLang}>
  <WorkExpTab lang={currentLang} slot='work-exp-tab' />
  <SkillsTab lang={currentLang} slot='skills-tab' />
  <EducationTab lang={currentLang} slot='education-tab' />
  <AboutTab lang={currentLang} slot='about-tab' />
</ResumeTabs>
