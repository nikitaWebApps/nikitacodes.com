---
import Layout from '../layouts/Layout.astro'
import Head from '../components/Head.astro'
import ResumeTabs from '../components/resumeTabs.vue'
import WorkExpTab from '../components/workExpTab.astro'
import EducationTab from '../components/educationTab.astro'
import SkillsTab from '../components/skillsTab.astro'
import AboutTab from '../components/aboutTab.astro'
import { translation } from '../i18n/translations'
const defaultLang = 'en'
---

<Layout pageTitle={translation[defaultLang].resume}>
  <Head />
  <ResumeTabs client:load currentLocale={defaultLang}>
    <WorkExpTab lang={defaultLang} slot='work-exp-tab' />
    <SkillsTab lang={defaultLang} slot='skills-tab' />
    <EducationTab lang={defaultLang} slot='education-tab' />
    <AboutTab lang={defaultLang} slot='about-tab' />
  </ResumeTabs>
</Layout>
